<Window x:Class="KrausRGA.UI.wndAppSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application Setting" Height="331" Width="654" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,3,0,-3">
        <Slider x:Name="sldfont" HorizontalAlignment="Left" Margin="197,32,0,0" VerticalAlignment="Top" Width="235" Minimum="-15" Maximum="15" ValueChanged="sldfont_ValueChanged"/>
        <Label Content="A" HorizontalAlignment="Left" Margin="155,26,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="A" HorizontalAlignment="Left" Margin="447,15,0,0" VerticalAlignment="Top" FontSize="36" />
        <Label Content="A" HorizontalAlignment="Left" Margin="210,71,0,0" VerticalAlignment="Top" FontSize="45" Height="74" />
        <TextBlock Text="A" HorizontalAlignment="Left" Margin="374,88,0,0" VerticalAlignment="Top" Style="{StaticResource tbFormTitle}" Foreground="Black" />
        <Label Content="Header Font" HorizontalAlignment="Left" Margin="29,90,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" />
        <Label Content="Control Font" HorizontalAlignment="Left" Margin="29,149,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"/>
        <Label Content="A" Name="lblcontrolfont" HorizontalAlignment="Left" Margin="216,143,0,0" VerticalAlignment="Top" FontSize="22" />
        <Label Content="A" HorizontalAlignment="Left" Margin="372,145,0,0" VerticalAlignment="Top" Style="{StaticResource lblVeriable}" />
        <Label Content="Label Font" HorizontalAlignment="Left" Margin="29,204,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" />
        <Label Content="A" x:Name="lblcontrolfont_Copy" HorizontalAlignment="Left" Margin="217,197,0,0" VerticalAlignment="Top" FontSize="20" />
        <Label Content="A" HorizontalAlignment="Left" Margin="372,198,0,0" VerticalAlignment="Top" Style="{StaticResource lblConstant}" />

        <Border Visibility="Visible" Style="{StaticResource bdrWin8btn}" BorderThickness="1" Canvas.Left="15" Canvas.Top="432" Background="#FF3E3F42" Margin="510,245,21,10">
            <Button x:Name="btnlogout" Style="{StaticResource win8btn}" Content="OK" Margin="-1" Click="btnlogout_Click"/>
        </Border>
    </Grid>
</Window>
