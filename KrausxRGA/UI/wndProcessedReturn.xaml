<Window x:Class="KrausRGA.UI.wndProcessedReturn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wndProcessedReturn" Height="1280" Width="800" WindowState="Maximized" Loaded="Window_Loaded_1">
    <Viewbox>
        <Grid Height="1280" Width="800">
        <Border>
            <Canvas>
                    <Border Height="45" Width="803" Background="#B2111111" Canvas.Top="1" Canvas.Left="-3">
                        <TextBlock TextWrapping="Wrap" Text="Processed Return" FontSize="25" Foreground="White" Margin="308,6,273,0"/>
                    </Border>
                    <DataGrid x:Name="dgPackageInfo"
        								SelectionMode="Extended" 
        								ItemsSource="{Binding}" 
        								HorizontalAlignment="Center" 
        								VerticalAlignment="Center"
        								Width="790" 
        								ScrollViewer.CanContentScroll="False" 
        								ScrollViewer.HorizontalScrollBarVisibility="Auto"
        								ScrollViewer.VerticalScrollBarVisibility="Auto" 
        								CanUserAddRows="False"    
        								AutoGenerateColumns="False" 
        								FontSize="17" 
        								Background="{x:Null}" 
        								SelectionUnit="FullRow" 
        								BorderThickness="1" 
        								Cursor="Hand"   
        								BorderBrush="{x:Null}" 
        								HorizontalGridLinesBrush="#FF575757" 
        								VerticalGridLinesBrush="Gray"
        								Height="554"  
        								SelectedIndex="-1" Canvas.Top="122" Canvas.Left="2"  SelectionChanged="dgPackageInfo_SelectionChanged_1" MouseDoubleClick="dgPackageInfo_MouseDoubleClick"
                                           >

                    <DataGrid.Resources>
                        <Style x:Key="HeaderStyleKey" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>

                            <DataGridTemplateColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
                                        		Header="RGA Number"  
                                        		Width="150" 
                                        		IsReadOnly="True" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel  Height="40" Width="150">
                                            <TextBox x:Name="txtRGANumber"  Height="40" Margin="0,0,0,0" Text="{Binding RGAROWID}" FontSize="20" FontWeight="Bold" IsEnabled="False"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                       
                        <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding RMANumber}" 
        										Header="SR Number"  
        										Width="130" 
        										IsReadOnly="True" />

                        <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding PONumber}" 
        										Header="PO Number"  
        										Width="140" 
        										IsReadOnly="True" />

                        <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding ReturnDate, StringFormat=\{0:MM/dd/yyyy \}}" 
        										Header="Return Date"  
        										Width="140" 
        										IsReadOnly="True" />

                            <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding CreatedDate, StringFormat=\{0:MM/dd/yyyy \}}" 
        										Header="Processed Date"  
        										Width="150" 
        										IsReadOnly="True" />

                            <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding VendoeName}" 
        										Header="Vendor Name"  
        										Width="160" 
        										IsReadOnly="True" />

                            <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding ProgressFlag}" 
        										Header="Progress Flag"  
        										Width="160" 
        										IsReadOnly="True" />


                        </DataGrid.Columns>
                    <DataGrid.RowValidationErrorTemplate>
                        <ControlTemplate>
                            <Grid Margin="0,-2,0,-2"
        											ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}}">
                                <Ellipse StrokeThickness="0" Fill="Red" 
        												Width="{TemplateBinding FontSize}" 
        												Height="{TemplateBinding FontSize}" />
                                <TextBlock Text="!" FontSize="{TemplateBinding FontSize}" 
        												FontWeight="Bold" Foreground="White" 
        												HorizontalAlignment="Center"  />
                            </Grid>
                        </ControlTemplate>
                    </DataGrid.RowValidationErrorTemplate>
                </DataGrid>
            </Canvas>
        </Border>

            <Border>
                <Canvas>
                    <Border Height="45" Width="803" Background="#B2111111" Canvas.Top="1" Canvas.Left="-3">
                        <TextBlock TextWrapping="Wrap" Text="Processed Return" FontSize="25" Foreground="White" Margin="308,6,273,0" x:Name="txtHeadLine"/>
                    </Border>
                    <Border Height="45" Width="803" Background="#B2111111" Canvas.Top="689" Canvas.Left="-3">
                        <TextBlock TextWrapping="Wrap" Text="Return Detail" FontSize="25" Foreground="White" Margin="308,6,273,0"/>
                    </Border>
                    <DataGrid x:Name="dgReturnDetailInfo"
        								SelectionMode="Extended" 
        								ItemsSource="{Binding}" 
        								HorizontalAlignment="Center" 
        								VerticalAlignment="Center"
        								Width="790" 
        								ScrollViewer.CanContentScroll="False" 
        								ScrollViewer.HorizontalScrollBarVisibility="Auto"
        								ScrollViewer.VerticalScrollBarVisibility="Auto" 
        								CanUserAddRows="False"    
        								AutoGenerateColumns="False" 
        								FontSize="17" 
        								Background="{x:Null}" 
        								SelectionUnit="FullRow" 
        								BorderThickness="1" 
        								Cursor="Hand"   
        								BorderBrush="{x:Null}" 
        								HorizontalGridLinesBrush="#FF575757" 
        								VerticalGridLinesBrush="Gray"
        								Height="460"  
        								SelectedIndex="-1" Canvas.Top="748" Canvas.Left="2"  
                                           >

                        <DataGrid.Resources>
                            <Style x:Key="HeaderStyleKey" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="20"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                        
                            
                            
                            
                            <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding SKUNumber}" 
        										Header="SKU Name"  
        										Width="180" 
        										IsReadOnly="True" />


                            <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding LineType}" 
        										Header="Line Type"  
        										Width="160" 
        										IsReadOnly="True" />

                            <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding SKU_Status}" 
        										Header="Status"  
        										Width="160" 
        										IsReadOnly="True" />

                            <DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding SalesPrice}" 
        										Header="Sales Price"  
        										Width="170" 
        										IsReadOnly="True" />

                            <!--<DataGridTextColumn HeaderStyle="{StaticResource HeaderStyleKey}" 
        										Binding="{Binding VendoeName}" 
        										Header="Vendor Name"  
        										Width="160" 
        										IsReadOnly="True" />-->

                        </DataGrid.Columns>
                        <DataGrid.RowValidationErrorTemplate>
                            <ControlTemplate>
                                <Grid Margin="0,-2,0,-2"
        											ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}}">
                                    <Ellipse StrokeThickness="0" Fill="Red" 
        												Width="{TemplateBinding FontSize}" 
        												Height="{TemplateBinding FontSize}" />
                                    <TextBlock Text="!" FontSize="{TemplateBinding FontSize}" 
        												FontWeight="Bold" Foreground="White" 
        												HorizontalAlignment="Center"  />
                                </Grid>
                            </ControlTemplate>
                        </DataGrid.RowValidationErrorTemplate>
                    </DataGrid>
                    <RadioButton Content="All" FontSize="25" Canvas.Left="32" Canvas.Top="72" x:Name="rbtAll" IsChecked="True" Checked="rbtAll_Checked_1" />
                    <RadioButton Content="Between Date" FontSize="25" Canvas.Left="114" Canvas.Top="72" x:Name="rbtBetween" Checked="rbtBetween_Checked_1" />
                    <Label Height="39" Width="67" Canvas.Left="312" Canvas.Top="68" Content="From" FontSize="25" />

                    <DatePicker Canvas.Top="78" Canvas.Left="386" Width="159" FontSize="15" Height="25" CalendarStyle="{StaticResource styleCalendar}" x:Name="dtpfrom" IsEnabled="False" SelectedDateChanged="dtpfrom_SelectedDateChanged" />
                    <Label Height="43" Width="37" Canvas.Left="550" Canvas.Top="68" Content="To" FontSize="25" />
                    <DatePicker Canvas.Top="78" Canvas.Left="594" Width="171" FontSize="15" Height="25" CalendarStyle="{StaticResource styleCalendar}" x:Name="dtpto" IsEnabled="False" SelectedDateChanged="dtpto_SelectedDateChanged" />
                    <Border Visibility="Visible" Style="{StaticResource bdrWin8btn}" Canvas.Top="1218" Height="56" Width="218" Canvas.Left="6" >
                        <StackPanel Orientation="Horizontal">
                            <Image Style="{StaticResource btnImage}"  MouseDown="btnback_Click" Source="/KrausRGA;component/Images/bac.png" Width="36"/>
                            <Button Style="{StaticResource ToolBarButtonBaseStyle}"
                                    			x:Name="btnback"
                                    			Content="Back" 
                                    			Click="btnback_Click"  Width="179"  />
                        </StackPanel>
                    </Border>

                </Canvas>
            </Border>
        </Grid>
    </Viewbox>
</Window>
